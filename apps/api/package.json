{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --config wrangler.toml",
    "build": "wrangler deploy --config wrangler.toml --env production --dry-run",
    "deploy": "wrangler deploy --config wrangler.toml --env production",
    "deploy:prod": "wrangler deploy --config wrangler.toml --env production",
    "deploy:preview": "wrangler deploy --config wrangler.toml --env preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@repo/db": "workspace:*",
    "@repo/shared": "workspace:*",
    "hono": "^4.4.7",
    "drizzle-orm": "^0.31.2",
    "zod": "^3.23.8",
    "stripe": "^15.12.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240614.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "wrangler": "^3.60.0"
  }
}
